<Window x:Class="Medical_tp.View.GestUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medical_tp.View"
        mc:Ignorable="d"
        Title="Gestusers" Height="476.695" Width="858.051" xmlns:Behaviours="clr-namespace:Medical_tp">
    <Window.Resources>
        <DataTemplate x:Key="dtListUser">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=Name}"/>
                <TextBlock Text=" "/>
                <TextBlock Text="{Binding Path=Firstname}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition  />
            <RowDefinition  />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="159.684*" />
        </Grid.ColumnDefinitions>
        <!--propriété à true pour pouvoir utiliser la collectionview-->
        <ListBox Grid.RowSpan="4" IsSynchronizedWithCurrentItem="True" ItemTemplate="{StaticResource dtListUser}" ItemsSource="{Binding ListUser}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}"></ListBox>

        <TextBlock Grid.Column="1" Grid.Row="0">Name :</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="1">Firstname :</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="2">Age :</TextBlock>

        <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding SelectedUser.Name}"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding SelectedUser.Firstname}"></TextBox>
        <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding SelectedUser.Login}"></TextBox>
        <StackPanel Grid.Row="3" >
            <TextBlock Text="Search : "></TextBlock>
            <TextBox Height="20" Text="{Binding SearchPattern, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <Button Grid.Row="4" Command="{Binding AddCommand}" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">Add</Button>

        <Button Grid.Row="3" Command="{Binding ModifyCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="2.875,0.462" Grid.Column="2" Margin="35,34,305,116">Modify</Button>
    </Grid>
</Window>
