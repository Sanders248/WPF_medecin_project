<UserControl x:Class="Medical_tp.View.MyDockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Medical_tp.View"
             mc:Ignorable="d" >
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="AliceBlue">
            
            <MenuItem Header="Users">
                <MenuItem Header="_Open" Command="{Binding OpenUserViewCommand}"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="Patients">
                <MenuItem Header="_Open" Command="{Binding OpenPatientViewCommand}"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <StackPanel></StackPanel>
    </DockPanel>
</UserControl>
